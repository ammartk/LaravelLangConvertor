<Window x:Class="LaravelLangConvertor.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="200" Width="400">
    <Grid Margin="10">
        <TextBlock Text="Please enter your DeepL API key:" RenderTransformOrigin="0.501,0.584"/>
        <TextBox x:Name="ApiKeyTextBox" Margin="0,27,75,82"/>
        <Button x:Name="SubmitButton" Content="Submit" Width="75" Margin="0,27,0,82"
                HorizontalAlignment="Right" Click="SubmitButton_Click"/>
    </Grid>
</Window>
